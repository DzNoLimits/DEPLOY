# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Batch scripts
[*.bat]
end_of_line = crlf
indent_style = space
indent_size = 4

# PowerShell scripts
[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Config files
[*.{ini,cfg}]
indent_style = space
indent_size = 4
